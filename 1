  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>
    AOS.init({ duration: 1000 });
    // Countdown fake (atualiza a cada segundo)
    setInterval(() => {
      let [d,h,m,s] = document.querySelectorAll('#countdown span') || [null,null,null,null];
      if (!s) return;
      let total = (parseInt(d.innerText)*86400) + (parseInt(h.innerText)*3600) + (parseInt(m.innerText)*60) + parseInt(s.innerText) - 1;
      if (total <= 0) total = 86400*3;
      let days = Math.floor(total / 86400).toString().padStart(2,'0');
      let hours = Math.floor((total % 86400)/3600).toString().padStart(2,'0');
      let mins = Math.floor((total % 3600)/60).toString().padStart(2,'0');
      let secs = (total % 60).toString().padStart(2,'0');
      document.getElementById('countdown').innerHTML = `${days} : ${hours} : ${mins} : ${secs}`;
    }, 1000);
  </script>
